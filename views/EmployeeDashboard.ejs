<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="../scripts/update.js" defer></script>
</head>

<body>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Add Task
    </button>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add Task</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/add_task" method="post">
                        <div class="form-group">
                            <label>Task Description:</label>
                            <input type="text" class="form-control" id="desc" name="desc"
                                placeholder="Enter task description">
                        </div>
                        <div class="form-group">
                            <label for="inputState">Task Type:</label>
                            <select name="type" id="type" class="form-control">
                                <option selected>Choose...</option>
                                <option>Break</option>
                                <option>Work</option>
                                <option>Meeting</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Start Time:</label>
                            <input id="st_time" name="st_time" type="datetime-local" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Time taken(in mins):</label>
                            <input id="time_taken" name="time_taken" type="text" class="form-control"
                                placeholder="Enter time taken">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Contact</th>
                    <th scope="col">Department</th>
                    <th scope="col">Join Date</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <% let i=0; if(data.length>0)
                    {
                    data.forEach(function(item){
                    i++;
                    %>
                    <tr>
                        <th scope="row">
                            <%= i %>
                        </th>
                        <td id="desc<%=i%>">
                            <%= item.task_description %>
                        </td>
                        <td id="type<%=i%>">
                            <%= item.task_type %>
                        </td>
                        <td id="st_time<%=i%>">
                            <%= item.start_time %>
                        </td>
                        <td id="time<%=i%>">
                            <%= item.time_taken %>
                        </td>
                        <td id="date<%=i%>">
                            <%= item.date.toString().substring(0,15) %>
                        </td>
                        <td>
                            <button onclick="update(this.id)" id="u<%=i%>" type="submit" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-lg<%=i%>">Update</button>

                            <div class="modal fade bd-example-modal-lg<%=i%>" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel1"
                                aria-hidden="true">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title" id="myLargeModalLabel">Update Task</h4>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">Ã—</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/updateTask" method="post">
                                            <div class="form-group">
                                                <label>Task Description:</label>
                                                <input type="text" class="form-control" id="udesc<%=i%>" name="udesc">
                                            </div>
                                            <div class="form-group">
                                                <label for="inputState">Task Type:</label>
                                                <select name="utype" id="utype<%=i%>" class="form-control">
                                                    <option selected>Choose...</option>
                                                    <option>Break</option>
                                                    <option>Work</option>
                                                    <option>Meeting</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Start Time:</label>
                                                <input id="ust_time<%=i%>" name="ust_time" type="time" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label>Time taken(in mins):</label>
                                                <input id="utime_taken<%=i%>" name="utime_taken" type="text" class="form-control">
                                            </div>
                                            <div style="display: none;" class="form-group">
                                                <input type="text" class="form-control" id="prevdesc<%=i%>" name="prevDesc">
                                            </div>
                                            <button type="submit" class="btn btn-primary">Update</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </td>
                        <td>
                            <button  onclick="remove(this.id)" id="d<%=i%>" type="submit" class="btn btn-danger">Delete</button>
                        </td>
                    </tr>
                    <% }) }else{ %>
                        <tr>
                            <td colspan="5">No data found</td>
                        </tr>
                        <% } %>
            </tbody>
        </table>
        <div style="display: none;">
        <form id="deleteForm" action="/deleteTask" method="post">
            <input type="text" id="ddesc" name="desc" />
            <input type="text" id="dtype" name="type" />
            <input type="time" id="dst_time" name="st_time" />
            <input type="text" id="dtime" name="time"/>
        </form>
        </div>
</body>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
</body>

</html>